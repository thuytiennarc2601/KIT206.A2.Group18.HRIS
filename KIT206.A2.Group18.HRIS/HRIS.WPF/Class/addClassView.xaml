<Window x:Class="HRIS.WPF.addClassView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRIS.WPF"
        xmlns:x1="clr-namespace:KIT206.A2.Group18.HRIS"
        mc:Ignorable="d"
        Title="addClassView" MaxHeight="400" MaxWidth="469" MinHeight="400" MinWidth="450" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ObjectDataProvider x:Key="enmCampus" MethodName="GetValues" ObjectType="{x:Type x1:Campus}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="x1:Campus"></x:Type>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="enmDay" MethodName="GetValues" ObjectType="{x:Type x1:Day}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="x1:Day"></x:Type>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="enmType" MethodName="GetValues" ObjectType="{x:Type x1:Type}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="x1:Type"></x:Type>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid Background="#FFFFE7BC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="224*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="addLabel" Margin="10,10,10,235" FontFamily="Georgia" Foreground="#FFD7C282" FontSize="20" FontWeight="Bold" Grid.ColumnSpan="5"/>
        <Rectangle Grid.ColumnSpan="5" HorizontalAlignment="Left" Height="97" Margin="0,287,0,0" Stroke="Black" VerticalAlignment="Top" Width="469" Fill="White"/>
        <Button MinHeight="50" MaxHeight="50" MinWidth="130" MaxWidth="130" x:Name="editClassBtn" Click="addClass_Click" Content="SUBMIT" Margin="66,313,35,21" FontSize="18" FontFamily="Verdana" BorderBrush="White" Background="#FF0E0C04" Foreground="White" Grid.Column="2"/>
        <Label Content="ID" HorizontalAlignment="Left" MinHeight="25" MaxHeight="25" Margin="11,42,0,0" VerticalAlignment="Top" MinWidth="42" MaxWidth="42" Grid.ColumnSpan="2" Height="24" Width="40"/>
        <Label Content="Unit code" Margin="138,42,31,218" Grid.Column="2" Grid.ColumnSpan="2"/>
        <ComboBox Text="-- Select Unit --" x:Name="comboBox_code" Loaded="unit_Loaded" MinHeight="25" MaxHeight="25" MinWidth="110" MaxWidth="110" Grid.Column="2" ScrollViewer.HorizontalScrollBarVisibility="Visible" IsEditable="True" Margin="221,38,26,313" Grid.ColumnSpan="3" FontSize="10"/>
        <Label Content="Campus" Margin="8,86,11,166" Grid.ColumnSpan="2"/>
        <ComboBox Text="-- Select Campus --" x:Name="comboBox_campus" MinHeight="25" MaxHeight="25" MinWidth="110" MaxWidth="110" Margin="0,82,121,267" Grid.Column="1" RenderTransformOrigin="0.5,0.5" ScrollViewer.HorizontalScrollBarVisibility="Visible" IsEditable="True" ItemsSource="{Binding Source={StaticResource enmCampus}}" HorizontalAlignment="Right" Width="117" Grid.ColumnSpan="2" FontSize="10"/>
        <Label Content="Day" Margin="138,128,28,126" Grid.Column="2" Grid.ColumnSpan="2"/>
        <ComboBox Text="-- Select Day --" x:Name="comboBox_day" MinHeight="25" MaxHeight="25" MinWidth="110" MaxWidth="110" Margin="231,125,0,226" Grid.Column="2" Grid.ColumnSpan="3" ScrollViewer.HorizontalScrollBarVisibility="Visible" IsEditable="True" ItemsSource="{Binding Source={StaticResource enmDay}}" HorizontalAlignment="Left" Width="116" FontSize="10"/>
        <Label Content="Start" Margin="11,186,9,70" Grid.ColumnSpan="2"/>
        <Label Content="End" Margin="140,184,8,71" Grid.Column="2"/>
        <Label Content="Type" Margin="11,129,211,126" Grid.ColumnSpan="3"/>
        <ComboBox Text="-- Select Type --" x:Name="comboBox_type" MinHeight="25" MaxHeight="25" MinWidth="110" MaxWidth="110" Margin="71,124,0,224" Grid.Column="1" ScrollViewer.HorizontalScrollBarVisibility="Visible" IsEditable="True" ItemsSource="{Binding Source={StaticResource enmType}}" HorizontalAlignment="Left" Width="116" Grid.ColumnSpan="2" FontSize="10"/>
        <Label Content="Room" Margin="138,86,29,169" Grid.Column="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBox_room" FontSize="10" Text="-- Selected Room --" HorizontalAlignment="Left" MinHeight="25" MaxHeight="25" Margin="231,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MinWidth="110" MaxWidth="110" Grid.Column="2" Grid.ColumnSpan="3"/>
        <ComboBox Text="-- Select Staff --"  Loaded="staff_Loaded" x:Name="comboBox_staff" MinHeight="25" MaxHeight="25" MinWidth="110" MaxWidth="110" Grid.Column="1" Margin="65,38,115,313" ScrollViewer.HorizontalScrollBarVisibility="Visible" IsEditable="True" Grid.ColumnSpan="2" FontSize="10" />
        <TextBox x:Name="start_hour" MaxLength="2" MaxWidth="40" MinWidth="40" MinHeight="25" MaxHeight="25" TextWrapping="Wrap" Text="HH" Grid.Column="1" Margin="71,186,191,173" Grid.ColumnSpan="2"/>
        <Label Content=":" Grid.Column="2" Margin="45,184,162,-184"/>
        <TextBox x:Name="start_minute" MaxLength="2" MaxWidth="40" MinWidth="40" MinHeight="25" MaxHeight="25" TextWrapping="Wrap" Text="MM" Grid.Column="2" Margin="68,186,123,173" RenderTransformOrigin="-0.278,1"/>
        <Rectangle Grid.Column="2" HorizontalAlignment="Left" Height="290" Margin="129,-3,0,0" Stroke="Black" VerticalAlignment="Top" Width="4">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFACA68D" Offset="0.905"/>
                    <GradientStop Color="#FFE7BE5A" Offset="0.735"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Column="4" HorizontalAlignment="Left" Height="750" Margin="8,-86,0,0" Stroke="Black" VerticalAlignment="Top" Width="4" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.015"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFACA68D" Offset="0.905"/>
                    <GradientStop Color="#FFE7BE5A" Offset="0.735"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBox x:Name="end_hour" MaxLength="2" MaxWidth="40" MinWidth="40" MinHeight="25" MaxHeight="25" TextWrapping="Wrap" Text="HH" Grid.Column="2" Margin="230,186,0,173" Grid.ColumnSpan="2"/>
        <Label Content=":" Grid.Column="4" Margin="5,186,76,-186"/>
        <TextBox x:Name="end_minute" MaxLength="2" MaxWidth="40" MinWidth="40" MinHeight="25" MaxHeight="25" TextWrapping="Wrap" Text="MM" Grid.Column="4" Margin="25,186,29,173" RenderTransformOrigin="-0.278,1"/>

    </Grid>
</Window>