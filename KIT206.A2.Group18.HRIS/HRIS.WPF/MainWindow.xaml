<Window x:Class="HRIS.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRIS.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="staff" Height="100" Width="100" Source="/staff3.png" Margin="48,44,652,290" MouseLeftButtonDown="staff_MouseLeftButtonDown"/>
        <Image x:Name="Class" Height="100" Width="100" Source="/class1.png" Margin="206,44,494,290" MouseLeftButtonDown="Class_MouseLeftButtonDown"/>
        <Image x:Name="Consultation" Height="100" Width="100" Margin="359,44,341,290" Source="/consultation 1.png" MouseLeftButtonDown="Consultation_MouseLeftButtonDown"/>
        <Image x:Name="Unit" Height="100" Width="100" Margin="543,44,157,290" Source="/unit2.png" MouseLeftButtonDown="Unit_MouseLeftButtonDown"/>
        <ListBox x:Name="GeneralListBox" HorizontalAlignment="Left" Height="214" Margin="48,162,0,0" VerticalAlignment="Top" Width="195" ItemsSource="{Binding Source={StaticResource staffList}}" SelectionChanged="ListBox_SelectionChanged"/>
        <Label Content="HRIS" Height="28" Margin="26,10,26,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
